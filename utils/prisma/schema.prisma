generator erd {
  provider = "prisma-erd-generator"
  output   = "../out/erd.md"
  theme    = "forest"
}

datasource db {
  provider = "mysql"
  url      = "hoge"
}

model User {
  id       String    @id @db.Char(255) /// バックエンドでUUID生成
  name     String    @db.VarChar(255) /// 日本語英語問わず64、登録なしはできない
  email    String    @unique @db.VarChar(255)
  password String    @db.VarChar(32) /// 8 文字以上 32 文字以下
  posts    Message[]
}

model Message {
  id         String   @id @db.Char(255) /// バックエンドでUUID生成
  body       String   @db.Text /// 日本語で最大140文字
  created_at DateTime @default(now()) @db.DateTime()
  User       User?    @relation(fields: [userId], references: [id])
  userId     String
}
